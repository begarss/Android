<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/details">

                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/eb_garamond"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvMain2"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="64dp"
                    android:layout_marginEnd="64dp"
                    android:fontFamily="@font/eb_garamond"
                    android:text="TextView"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle2" />

                <ImageButton
                    android:id="@+id/ibLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#fafafa"

                    app:layout_constraintStart_toStartOf="@+id/tvTitle2"
                    app:layout_constraintTop_toBottomOf="@+id/tvMain2"
                    app:srcCompat="@drawable/ic_favorite" />

                <TextView
                    android:id="@+id/tvLikes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="@+id/ibLike"
                    app:layout_constraintStart_toEndOf="@+id/ibLike"
                    app:layout_constraintTop_toTopOf="@+id/ibLike" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#fafafa"
                    app:layout_constraintStart_toEndOf="@+id/tvLikes2"
                    app:layout_constraintTop_toTopOf="@+id/ibLike"
                    app:srcCompat="@drawable/ic_share_black_24dp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#fafafa"
                    app:layout_constraintStart_toEndOf="@+id/imageButton3"
                    app:layout_constraintTop_toTopOf="@+id/ibLike"
                    app:srcCompat="@drawable/ic_bookmark_black_24dp" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#fafafa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ibLike"
                    app:srcCompat="@drawable/ic_more_vert_black_24dp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="@+id/imageButton5"
                    app:layout_constraintStart_toStartOf="@+id/tvTitle2"
                    app:layout_constraintTop_toBottomOf="@+id/ibLike" />

                <ImageView
                    android:id="@+id/ivAva"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="@drawable/rounded_fg"
                    app:layout_constraintBottom_toTopOf="@+id/commentSec"
                    app:layout_constraintStart_toStartOf="@+id/tvTitle2"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    app:srcCompat="@drawable/ava" />

                <TextView
                    android:id="@+id/tvAuthor2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAva"
                    app:layout_constraintStart_toEndOf="@+id/ivAva"
                    app:layout_constraintTop_toTopOf="@+id/ivAva" />

                <TextView
                    android:id="@+id/tvDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="TextView"
                    app:layout_constraintBottom_toBottomOf="@+id/ivAva"
                    app:layout_constraintStart_toStartOf="@+id/tvAuthor2"
                    app:layout_constraintTop_toBottomOf="@+id/tvAuthor2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/commentSec"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_marginTop="8dp"
                    android:background="#C7C4C4"
                    android:backgroundTint="#F8F6F6"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvDate2">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="56dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Comments"
                        android:textColor="#706F6F"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="367dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="32dp"
                        android:background="#FFF"
                        android:backgroundTint="#FFF"
                        app:layout_constraintStart_toStartOf="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/textView7">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFF"
                            android:hint="Write a comment..." />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>